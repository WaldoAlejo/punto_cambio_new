{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "noEmit": true,

    "types": ["node"],
    "resolveJsonModule": true,

    /* Opcionales (solo si realmente los necesitas) */
    "allowImportingTsExtensions": false,
    "moduleDetection": "force"
  },
  "include": ["vite.config.ts", "scripts/**/*.ts"]
}
