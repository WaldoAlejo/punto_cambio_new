
{
  "name": "punto-cambio-server",
  "version": "1.0.0",
  "description": "API server for punto cambio app",
  "main": "server/index.js",
  "type": "module",
  "scripts": {
    "start": "node server/index.js",
    "server": "node server/index.js",
    "server:dev": "nodemon server/index.js",
    "server:prod": "NODE_ENV=production node server/index.js",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop punto-cambio-api",
    "pm2:restart": "pm2 restart punto-cambio-api",
    "pm2:logs": "pm2 logs punto-cambio-api",
    "pm2:monit": "pm2 monit",
    "deploy": "bash scripts/deploy.sh",
    "backup": "bash scripts/backup.sh",
    "health": "bash scripts/health-check.sh",
    "db:migrate": "npx prisma migrate deploy",
    "db:generate": "npx prisma generate",
    "db:seed": "node src/scripts/semilla.ts",
    "logs:error": "tail -f logs/error.log",
    "logs:combined": "tail -f logs/combined.log"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "winston": "^3.11.0",
    "zod": "^3.22.4",
    "@prisma/client": "^5.6.0",
    "pm2": "^5.3.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "@types/jsonwebtoken": "^9.0.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
