{
  "compilerOptions": {
    "composite": true,
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "lib": ["ES2023"],
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noEmit": false,
    "outDir": "./dist-server",
    "tsBuildInfoFile": "./tsconfig.server.tsbuildinfo",
    "types": ["node", "express"]
  },
  "include": [
    "./server/**/*.ts",
    "./server/**/*.tsx",
    "./server/types/**/*.d.ts"
  ],
  "exclude": ["./node_modules", "./dist", "./dist-server", "./src"]
}
